@model IdentityUser;

<section class="breadcrumb_area">
    <div class="overlay bg-parallax" data-stellar-ratio="0.8" data-stellar-vertical-offset="0" data-background=""></div>
    <div class="container">
        <div class="page-cover text-center">
            <h2 class="page-cover-tittle">Моята информация</h2>

        </div>
    </div>
</section>
<section class="about_history_area section_gap">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <form method="post" asp-action="AddRoute" asp-controller="Admin">
                    <div class="form-group">
                        <label for="formGroupExampleInput">Потребитлско име</label>
                        <input type="text" asp-for="UserName" class="form-control" id="formGroupExampleInput"  disabled>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">    
                        <label for="formGroupExampleInput2">Имейл</label>
                        <input type="text" asp-for="Email" class="form-control" id="formGroupExampleInput2" disabled>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput2">Телефон</label>
                        <input type="text" asp-for="PhoneNumber" class="form-control" id="formGroupExampleInput2"  disabled>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </form>
            </div>

        </div>
    </div>
</section>
